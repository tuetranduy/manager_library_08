<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1> <%= @user.name %> </h1>
    </section>
    <section class="stats">
      <%= image_tag @user.avatar_img.url, class: "img-circle", size: Settings.user.avatar %>
      <%= render "shared/stats" %>
      <%= render "follow_form" if logged_in? %>
    </section>
  </aside>
</div>
