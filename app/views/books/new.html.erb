<% provide(:title, t(".add_book")) %>
<h1><%= t ".add_new_book" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @book do |f| %>
      <%= render "shared/error_messages_book" %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.collection_select :category_id, @categories, :id, :name %>
      <%= f.collection_select :author_id, @authors, :id, :name %>
      <%= f.collection_select :publisher_id, @publishers, :id, :name %>
      <%= f.text_area :details %>

      <%= f.submit t(".add_book"), class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
